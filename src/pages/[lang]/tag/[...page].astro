---
import Layout from '~/layouts/PageLayout.astro';
import BlogList from '~/components/blog/List.astro';
import Headline from '~/components/blog/Headline.astro';
import Pagination from '~/components/blog/Pagination.astro';
import { blogTagRobots, fetchPosts, fetchPostsByLocale } from '~/utils/blog';
import { LANGUAGES } from '~/lib/i18n';

const lang = Astro.currentLocale || Astro.preferredLocale || 'it';

export const prerender = true;

export async function getStaticPaths() {
  const allPaths = await Promise.all(
    LANGUAGES.map(async lang => {
      const posts = await fetchPostsByLocale(lang);
      const tags = new Set();
      
      posts.forEach((post) => {
        if (post.tags) {
          post.tags.forEach(tag => {
            if (tag.slug) {
              tags.add(tag.slug);
            }
          });
        }
      });

      return Array.from(tags).map((tagSlug) => ({
        params: { lang, page: tagSlug }
      }));
    })
  );

  return allPaths.flat();
}

// Get tag slug from URL params
const tagSlug = Astro.params.page;
const currentPage = 1; // Static generation - single page for each tag

// Fetch all posts and filter by tag
const allPosts = await fetchPostsByLocale(lang);
const tag = { slug: tagSlug, title: tagSlug };

const taggedPosts = allPosts.filter((post) => 
  Array.isArray(post.tags) && post.tags.find((t) => t.slug === tagSlug)
);

const start = 0;
const end = taggedPosts.length;
const posts = taggedPosts.slice(start, end);

const page = {
  data: posts,
  currentPage: currentPage,
  url: {
    prev: undefined,
    next: undefined,
  },
};

const metadata = {
  title: `Posts by tag '${tag.title}'`,
  robots: {
    index: blogTagRobots?.index,
    follow: blogTagRobots?.follow,
  },
};
---

<Layout metadata={metadata}>
  <section class="px-4 md:px-6 py-12 sm:py-16 lg:py-20 mx-auto max-w-4xl">
    <Headline>Tag: {tag.title}</Headline>
    <BlogList posts={page.data} />
    <Pagination prevUrl={page.url.prev} nextUrl={page.url.next} />
  </section>
</Layout>