---
import Layout from '~/layouts/PageLayout.astro';

import Hero2 from '~/components/widgets/Hero2.astro';
import Features from '~/components/widgets/Features.astro';
import Steps2 from '~/components/widgets/Steps2.astro';
import Content from '~/components/widgets/Content.astro';

import FAQs from '~/components/widgets/FAQs.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';

import { loadLocale } from "~/lib/i18n";

import renoir from "~/assets/images/renoir.png";

import case1 from '~/assets/images/use_cases/case1.jpg';
import case2 from '~/assets/images/use_cases/case2.jpg';
import case3 from '~/assets/images/use_cases/case3.jpg';

import case1_dark from '~/assets/images/use_cases/case1_dark.jpg';
import case2_dark from '~/assets/images/use_cases/case2_dark.jpg';
import case3_dark from '~/assets/images/use_cases/case3_dark.jpg';
import { getLanguagePaths } from '~/lib/i18n';
import { getRelativeLocaleUrl } from 'astro:i18n';

export function getStaticPaths() {
  return getLanguagePaths();
}

const lang = Astro.currentLocale || Astro.preferredLocale || 'it';
const m = loadLocale(lang);

const metadata = {
  title: m.renoir_overview_title(),
};
---

<Layout metadata={metadata}>

  <!-- Hero2 Widget ******************* -->

  <Hero2
    tagline="Databrush"
    actions={[
      { variant: 'primary', target: '_blank', text: m.renoir_hero_action_1(), href: getRelativeLocaleUrl(lang, '/docs/renoir') },
      { text: m.renoir_hero_action_2(), href: '#features' },
    ]}
    image={{
      src: renoir,
      alt: 'AstroWind Hero Image',
    }}
  >
    <Fragment slot="title">
      {m.renoir_hero_title()}
    </Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline">
        {m.renoir_hero_subtitle()}
      </span>
    </Fragment>
  </Hero2>

  <!-- Features Widget *************** -->

  <Features
    id="features"
    title={m.renoir_features_title()}
    subtitle={m.renoir_features_subtitle()}
    columns={2}
     items={[
      {
        title: m.renoir_features_item_1_title(),
        description: m.renoir_features_item_1_description(),
        icon: 'tabler:artboard',
      },
      {
        title: m.renoir_features_item_2_title(),
        description: m.renoir_features_item_2_description(),
        icon: 'tabler:picture-in-picture',
      },
      {
        title: m.renoir_features_item_3_title(),
        description: m.renoir_features_item_3_description(),
        icon: 'tabler:adjustments-horizontal',
      },
      {
        title: m.renoir_features_item_4_title(),
        description: m.renoir_features_item_4_description(),
        icon: 'tabler:rocket',
      },
      {
        title: m.renoir_features_item_5_title(),
        description: m.renoir_features_item_5_description(),
        icon: 'tabler:arrows-right-left',
      },
      {
        title: m.renoir_features_item_6_title(),
        description: m.renoir_features_item_6_description(),
        icon: 'tabler:plug-connected',
      },
    ]}
  />

  <!-- Content Widget **************** -->

  <Content
    title={m.renoir_use_cases_title()}
    subtitle={m.renoir_use_cases_subtitle()}
    isReversed
    items={[
      {
        title: 'Description:',
        description: m.renoir_use_case_1_description(),
      },
      {
        title: 'Examples:',
        description: m.renoir_use_case_1_examples(),
      },
    ]}
    image={{
      src: case1,
      alt: 'Startup Image',
    }}
    imageDark={{
      src: case1_dark,
      alt: 'Startup Image',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">
        {m.renoir_use_case_1_title()}
      </h3>
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Content Widget **************** -->

  <Content
    isAfterContent={true}
    items={[
      {
        title: 'Description:',
        description: m.renoir_use_case_2_description(),
      },
      {
        title: 'Examples:',
        description: m.renoir_use_case_2_examples(),
      },
    ]}
    image={{
      src: case2,
      alt: 'SaaS Businesses Image',
    }}
    imageDark={{
      src: case2_dark,
      alt: 'SaaS Businesses Image',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">
        {m.renoir_use_case_2_title()}
      </h3>
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- Content Widget **************** -->

  <Content
    isReversed
    isAfterContent={true}
    items={[
      {
        title: 'Description:',
        description: m.renoir_use_case_3_description(),
      },
      {
        title: 'Examples:',
        description: m.renoir_use_case_3_examples(),
      },
    ]}
    image={{
      src: case3,
      alt: 'Portfolio Image',
    }}
    imageDark={{
      src: case3_dark,
      alt: 'Portfolio Image',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight dark:text-white sm:text-3xl mb-2">
        {m.renoir_use_case_3_title()}
      </h3>
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Content>

  <!-- FAQs Widget ******************* -->

  <FAQs
    id='FAQ'
    title={m.renoir_faq_title()}
    items={[
      {
        title: m.renoir_faq_item_1_title(),
        description: m.renoir_faq_item_1_description(),
      },
      {
        title: m.renoir_faq_item_2_title(),
        description: m.renoir_faq_item_2_description(),
      },
      {
        title: m.renoir_faq_item_3_title(),
        description: m.renoir_faq_item_3_description(),
      },
      {
        title: m.renoir_faq_item_4_title(),
        description: m.renoir_faq_item_4_description(),
      },
    ]}
  />

  <!-- Steps2 Widget ****************** -->

  <Steps2
    title={m.renoir_contact_title()}
    subtitle={m.renoir_contact_subtitle()}
    callToAction={{
      text: m.renoir_contact_cta(),
      href: getRelativeLocaleUrl(lang, '/contact'),
    }}
    items={[
      {
        title: m.renoir_contact_email_title(),
        description: m.renoir_contact_email_description(),
        icon: 'tabler:mail',
      },
      {
        title: m.renoir_contact_follow_title(),
        description: m.renoir_contact_follow_description(),
        icon: 'tabler:brand-linkedin',
      },
    ]}
  />

  <!-- BlogLatestPost Widget **************** -->

  <BlogLatestPosts
    id="blog"
    title={m.renoir_blog_title()}
    information={m.renoir_blog_description()}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </BlogLatestPosts>
</Layout>
