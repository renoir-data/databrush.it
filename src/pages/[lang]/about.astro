---
import Features3 from '~/components/widgets/Features3.astro';
import Hero from '~/components/widgets/Hero.astro';
import Steps2 from '~/components/widgets/Steps2.astro';
import Layout from '~/layouts/PageLayout.astro';
import team2 from '~/assets/images/team.png';
import { loadLocale } from "~/lib/i18n";
import { getLanguagePaths } from '~/lib/i18n';

export function getStaticPaths() {
  return getLanguagePaths();
}

const lang = Astro.currentLocale || Astro.preferredLocale || 'it';
const m = loadLocale(lang);

const metadata = {
  title: m.about_page_title(),
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    tagline={m.about_tagline()}
    image={{
      src: team2,
      alt: 'Databrush Team',
    }}
  >
    <Fragment slot="title" set:html={m.about_hero_title()} />
    <Fragment slot="subtitle" set:html={m.about_hero_subtitle()} />
  </Hero>

  <!-- Features3 Widget ************** -->

  <Features3
    title={m.about_strengths_title()}
    subtitle={m.about_strengths_subtitle()}
    columns={3}
    items={[
      {
        title: m.about_strength_1_title(),
        description: m.about_strength_1_description(),
        icon: 'tabler:stack-back',
      },
      {
        title: m.about_strength_2_title(),
        description: m.about_strength_2_description(),
        icon: 'tabler:chart-covariate',
      },
      {
        title: m.about_strength_3_title(),
        description: m.about_strength_3_description(),
        icon: 'tabler:brand-speedtest',
      },
    ]}
  />

  <!-- Steps2 Widget ****************** -->

  <Steps2
    title={m.about_values_title()}
    subtitle={m.about_values_subtitle()}
    items={[
      {
        title: m.about_value_1_title(),
        description: m.about_value_1_description(),
      },
      {
        title: m.about_value_2_title(),
        description: m.about_value_2_description(),
      },
      {
        title: m.about_value_3_title(),
        description: m.about_value_3_description(),
      },
    ]}
  />
</Layout>
