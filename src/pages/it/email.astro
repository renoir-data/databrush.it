---
import PageLayout from "~/layouts/PageLayout.astro";
import Hero from '~/components/widgets/Hero.astro';
import emailImage from '~/assets/images/email.png';
import Features from '~/components/widgets/Features.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import * as m from '~/paraglide/messages';

const metadata = {
  title: m.email_page_title(),
};
---

<PageLayout metadata={metadata}>
  <Hero
    actions={[{ text: m.email_hero_action(), href: '/contact', variant: 'primary' }]}
    image={{ src: emailImage, alt: 'Mail Intelligence hero image' }}
    
  >
    <Fragment slot="title">{m.email_page_title()}</Fragment>
    <Fragment slot="subtitle">{m.email_hero_subtitle()}</Fragment>
  </Hero>

  <section class="max-w-6xl mx-auto px-4 sm:px-6 py-12">
    <Features
      title={m.email_features_title()}
      subtitle={m.email_features_subtitle()}
      columns={2}
      items={[
        {
          title: m.email_feature_1_title(),
          description: m.email_feature_1_description(),
          icon: 'tabler:search',
        },
        {
          title: m.email_feature_2_title(),
          description: m.email_feature_2_description(),
          icon: 'tabler:align-justified',
        },
        {
          title: m.email_feature_3_title(),
          description: m.email_feature_3_description(),
          icon: 'tabler:message-circle',
        },
        {
          title: m.email_feature_4_title(),
          description: m.email_feature_4_description(),
          icon: 'tabler:mail',
        },
      ]}
    />

    <Features
      title={m.email_use_cases_title()}
      subtitle={m.email_use_cases_subtitle()}
      columns={3}
      items={[
        {
          title: m.email_use_case_1_title(),
          description: m.email_use_case_1_description(),
          icon: 'tabler:headset',
        },
        {
          title: m.email_use_case_2_title(),
          description: m.email_use_case_2_description(),
          icon: 'tabler:file-text',
        },
        {
          title: m.email_use_case_3_title(),
          description: m.email_use_case_3_description(),
          icon: 'tabler:users',
        },
      ]}
      defaultIcon="tabler:check"
    />

    <div class="mt-8">
      <CallToAction
        actions={[
          {
            text: m.email_hero_action(),
            href: '/contact',
            variant: 'primary',
          },
        ]}
      >
        <Fragment slot="title">{m.email_cta_title()}</Fragment>
        <Fragment slot="subtitle">{m.email_cta_subtitle()}</Fragment>
      </CallToAction>
    </div>
  </section>
</PageLayout>