---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import ContactUs from '~/components/widgets/Contact.astro';
import Features2 from '~/components/widgets/Features2.astro';
import * as m from '~/paraglide/messages';

const metadata = {
  title: m.contact_page_title(),
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText 
    tagline={m.contact_tagline()} 
    title={m.contact_hero_title()} 
    subtitle={m.contact_hero_subtitle()}
  />

  <ContactUs
    id="form"
    title={m.contact_title()}
    inputs={[
      {
        type: 'text',
        name: 'name',
        label: m.contact_input_name_label(),
        placeholder: m.contact_input_name_placeholder(),
      },
      {
        type: 'email',
        name: 'email',
        label: m.contact_input_email_label(),
        placeholder: m.contact_input_email_placeholder(),
      },
    ]}
    textarea={{
      label: m.contact_textarea_label(),
      placeholder: m.contact_textarea_placeholder(),
    }}
    disclaimer={{
      label: m.contact_disclaimer_label(),
    }}
    description={m.contact_description()}
    button={m.contact_button()}
    method='post'
    action="https://forms.un-static.com/forms/f92a74143ea36998a842bb838854714e148f4379"
  >
    <Fragment slot="subtitle" set:html={m.contact_form_subtitle()} />
  </ContactUs>

  <!-- Features2 Widget ************** -->

  <Features2
    title={m.contact_support_title()}
    items={[
      {
        title: m.contact_support_item_1_title(),
        description: m.contact_support_item_1_description(),
      },
      {
        title: m.contact_support_item_2_title(),
        description: m.contact_support_item_2_description(),
      },
      {
        title: m.contact_support_item_3_title(),
        description: m.contact_support_item_3_description(),
      },
    ]}
  />

</Layout>
