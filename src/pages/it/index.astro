---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

import Features2 from '~/components/widgets/Features2.astro';
import Features from '~/components/widgets/Features.astro';
import Stats from '~/components/widgets/Stats.astro';
import Features3 from '~/components/widgets/Features3.astro';
import FAQs from '~/components/widgets/FAQs.astro';

import ContactUs from '~/components/widgets/Contact.astro';

import brush_small from '~/assets/images/brush/small.svg?raw';
import brush_medium from '~/assets/images/brush/medium.svg?raw';
import brush_large from '~/assets/images/brush/large.svg?raw';
import Content_dinamic from '~/components/widgets/Content_dinamic.astro';
import * as m from '~/paraglide/messages';

const metadata = {
  title: 'Databrush',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Section with Background ******************* -->

  <div class="relative min-h-screen w-screen flex items-center justify-center">
    <!-- Background -->
    <div class="absolute w-full flex justify-center items-center -z-30 overflow-hidden">
      <div class="sm:hidden w-full h-full [&>svg]:w-full [&>svg]:h-full [&>svg]:object-cover">
        <Fragment set:html={brush_small} class:list="" />
      </div>
      <div class="hidden sm:max-lg:block w-full h-full [&>svg]:w-full [&>svg]:h-full [&>svg]:object-cover">
        <Fragment set:html={brush_medium} />
      </div>
      <div class="hidden lg:block w-full h-full [&>svg]:w-full [&>svg]:h-full [&>svg]:object-cover">
        <Fragment set:html={brush_large} />
      </div>
    </div>

    <!-- Hero Content -->
    <Hero
      tagline="Databrush"
      actions={[
        {
          variant: 'primary',
          target: '_blank',
          text: m.hero_action_1(),
          href: '/docs/renoir',
          icon: 'tabler:download',
        },
        { text: m.hero_action_2(), href: '#features', variant: 'secondary' },
      ]}
    >
      <Fragment slot="title" set:html={m.hero_title()} />
      <Fragment slot="subtitle" set:html={m.hero_subtitle()} />
    </Hero>
  </div>

  <!-- Features2 Widget ************** -->

  <Features3 title={m.about_us_title()} isBeforeContent={true}>
    <Fragment slot="subtitle" set:html={m.about_us_subtitle()} />
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Features3>

  <!-- Agent² Section **************** -->

  <Features2
    title={m.landing_agent_title()}
    tagline={m.landing_agent_tagline()}
    subtitle={m.landing_agent_subtitle()}
    items={[
      {
        title: m.landing_agent_item_1_title(),
        description: m.landing_agent_item_1_description(),
        icon: 'tabler:mail',
        classes: {
          panel: 'flex flex-col justify-center items-center text-center',
        },
      },
      {
        title: m.landing_agent_item_2_title(),
        description: m.landing_agent_item_2_description(),
        icon: 'tabler:chart-line',
        classes: {
          panel: 'flex flex-col justify-center items-center text-center',
        },
      },
      {
        title: m.landing_agent_item_3_title(),
        description: m.landing_agent_item_3_description(),
        icon: 'tabler:brain',
        classes: {
          panel: 'flex flex-col justify-center items-center text-center',
        },
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
    <Fragment slot="footer">
      <a
        href="/agent2"
        class="btn btn-primary inline-flex items-center gap-2 px-6 py-3 text-lg font-semibold text-white bg-primary hover:bg-primary-600 rounded-lg transition-colors"
      >
        {m.landing_agent_cta()}
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="w-5 h-5"
          viewBox="0 0 24 24"
          stroke-width="2"
          stroke="currentColor"
          fill="none"
        >
          <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7"></path>
        </svg>
      </a>
    </Fragment>
  </Features2>

  <!-- Stats Widget ****************** -->

  <!-- <TypedCodeImage /> -->
  <!-- <IndustrialMonitoring/> -->

  <Stats
    title={m.stats_title()}
    subtitle={m.stats_subtitle()}
    stats={[
      { title: m.stats_item_1_title(), amount: '1º' },
      { title: m.stats_item_2_title(), amount: '>1000' },
      { title: m.stats_item_3_title(), amount: '83' },
      { title: m.stats_item_4_title(), amount: '4' },
    ]}
  />

  <Features
    id="features"
    title={m.features_title()}
    subtitle={m.features_subtitle()}
    columns={3}
    items={[
      {
        title: m.features_item_1_title(),
        description: m.features_item_1_description(),
        icon: 'tabler:artboard',
      },
      {
        title: m.features_item_2_title(),
        description: m.features_item_2_description(),
        icon: 'tabler:picture-in-picture',
      },
      {
        title: m.features_item_3_title(),
        description: m.features_item_3_description(),
        icon: 'tabler:adjustments-horizontal',
      },
      {
        title: m.features_item_4_title(),
        description: m.features_item_4_description(),
        icon: 'tabler:rocket',
      },
      {
        title: m.features_item_5_title(),
        description: m.features_item_5_description(),
        icon: 'tabler:arrows-right-left',
      },
      {
        title: m.features_item_6_title(),
        description: m.features_item_6_description(),
        icon: 'tabler:plug-connected',
      },
    ]}
  />

  <!-- Use Cases -->

  <Content_dinamic
    isReversed
    items={[
      {
        title: m.use_cases_item_1_title(),
        description: m.use_cases_item_1_description(),
        icon: 'tabler:shield',
        data: { 'data-index': '0' },
      },
      {
        title: m.use_cases_item_2_title(),
        description: m.use_cases_item_2_description(),
        icon: 'tabler:settings',
        data: { 'data-index': '1' },
      },
      {
        title: m.use_cases_item_3_title(),
        description: m.use_cases_item_3_description(),
        icon: 'tabler:wand',
        data: { 'data-index': '2' },
      },
    ]}
  >
    <Fragment slot="content">
      <h3
        class="text-4xl text-center font-bold tracking-tight dark:text-white sm:text-3xl mb-2"
        set:html={m.use_cases_title()}
      />
    </Fragment>
  </Content_dinamic>

  <!-- FAQs Widget ******************* -->

  <FAQs
    id="FAQ"
    title={m.faq_title()}
    items={[
      {
        title: m.faq_item_1_title(),
        description: m.faq_item_1_description(),
      },
      {
        title: m.faq_item_2_title(),
        description: m.faq_item_2_description(),
      },
      {
        title: m.faq_item_3_title(),
        description: m.faq_item_3_description(),
      },
      {
        title: m.faq_item_4_title(),
        description: m.faq_item_4_description(),
      },
      {
        title: m.faq_item_5_title(),
        description: m.faq_item_5_description(),
      },
      {
        title: m.faq_item_6_title(),
        description: m.faq_item_6_description(),
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </FAQs>

  <ContactUs
    id="form"
    title={m.contact_title()}
    subtitle={m.contact_subtitle()}
    inputs={[
      {
        type: 'text',
        name: 'name',
        label: m.contact_input_name_label(),
        placeholder: m.contact_input_name_placeholder(),
      },
      {
        type: 'email',
        name: 'email',
        label: m.contact_input_email_label(),
        placeholder: m.contact_input_email_placeholder(),
      },
    ]}
    textarea={{
      label: m.contact_textarea_label(),
      placeholder: m.contact_textarea_placeholder(),
    }}
    disclaimer={{
      label: m.contact_disclaimer_label(),
    }}
    description={m.contact_description()}
    button={m.contact_button()}
    method="post"
    action="https://forms.un-static.com/forms/f92a74143ea36998a842bb838854714e148f4379"
  />

  <!-- CallToAction Widget *********** -->

  <CallToAction
    actions={[
      {
        variant: 'primary',
        target: '_blank',
        text: m.hero_action_1(),
        href: '/docs/renoir',
        icon: 'tabler:download',
      },
    ]}
  >
    <Fragment slot="title" set:html={m.cta_title()} />

    <Fragment slot="subtitle" set:html={m.cta_subtitle()} />
  </CallToAction>
</Layout>
