---
import HeroText from '~/components/widgets/HeroText.astro';
import Steps from '~/components/widgets/Steps.astro';
import PageLayout from '~/layouts/PageLayout.astro';
import * as m from '~/paraglide/messages';

const metadata = {
  title: m.roadmap_title(),
};
---

<PageLayout metadata={metadata}>
  <HeroText
    tagline={m.roadmap_tagline()}
    title={m.roadmap_title()}
    subtitle={m.roadmap_subtitle()}
  >
  </HeroText>
  <Steps
    items={[
      {
        title: m.roadmap_phase_1_title(),
        description: m.roadmap_phase_1_description(),
        icon: 'tabler:package',
        year: 2025,
      },
      {
        title: m.roadmap_phase_2_title(),
        description: m.roadmap_phase_2_description(),
        icon: 'tabler:adjustments-horizontal',
        year: 2026,
      },
      {
        title: m.roadmap_phase_3_title(),
        description: m.roadmap_phase_3_description(),
        icon: 'tabler:cloud',
        year: 2027,
      },
    ]}
  />
</PageLayout>
