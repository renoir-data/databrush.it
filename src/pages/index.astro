---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

import Features2 from '~/components/widgets/Features2.astro';
import Features from '~/components/widgets/Features.astro';
import Stats from '~/components/widgets/Stats.astro';
import Features3 from '~/components/widgets/Features3.astro';
import FAQs from '~/components/widgets/FAQs.astro';

import ContactUs from '~/components/widgets/Contact.astro';

import brush_small from '~/assets/images/brush/small.svg?raw';
import brush_medium from '~/assets/images/brush/medium.svg?raw';
import brush_large from '~/assets/images/brush/large.svg?raw';
import polimi_logo from '~/assets/images/spinoff.webp';
import Content_dinamic from '~/components/widgets/Content_dinamic.astro';
import * as m from '~/paraglide/messages';
import { Image } from 'astro:assets';

const metadata = {
  title: 'Databrush',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Section with Background ******************* -->

  <div class="relative min-h-screen w-full flex items-center justify-center overflow-hidden">
    <!-- Background -->
    <div class="absolute w-full flex justify-center items-center -z-30">
      <div class="sm:hidden w-full h-full [&>svg]:w-full [&>svg]:h-full [&>svg]:object-cover">
        <Fragment set:html={brush_small} class:list="" />
      </div>
      <div class="hidden sm:max-lg:block w-full h-full [&>svg]:w-full [&>svg]:h-full [&>svg]:object-cover">
        <Fragment set:html={brush_medium} />
      </div>
      <div class="hidden lg:block w-full h-full [&>svg]:w-full [&>svg]:h-full [&>svg]:object-cover">
        <Fragment set:html={brush_large} />
      </div>
    </div>

    <!-- Hero Content -->
    <Hero
      tagline="You need a Brush to paint a Data Masterpiece"
      actions={[
        {
          variant: 'primary',
          text: m.hero_action_1(),
          href: '/contact',
          icon: 'tabler:calendar',
        },
        { text: m.hero_action_2(), href: '#contact-form', variant: 'secondary' },
      ]}
    >
      <Fragment slot="title" set:html={m.hero_title()} />
      <Fragment slot="subtitle" set:html={m.hero_subtitle()} />
    </Hero>
  </div>

  <!-- Academic Credibility Section ************** -->

  <div class="px-4 py-16 mx-auto max-w-7xl sm:px-6 lg:px-8 lg:py-20">
    <div class="text-center mb-8">
      <p class="text-base font-semibold tracking-wide text-primary uppercase" set:html={m.credibility_tagline()} />
      <p class="mt-2 text-muted max-w-3xl mx-auto" set:html={m.about_us_subtitle()} />
    </div>
    <div class="flex justify-center mb-8">
      <div class="w-64 h-auto [&>svg]:w-full [&>svg]:h-auto">
        <Image src={polimi_logo} alt="SpinOff Politecnico Logo" />
      </div>
    </div>
  <Stats
    subtitle={m.stats_title()}
    stats={[
      { title: m.stats_item_1_title(), amount: '1º' },
      { title: m.stats_item_2_title(), amount: '>1000' },
      { title: m.stats_item_3_title(), amount: '83' },
      { title: m.stats_item_4_title(), amount: '4' },
    ]}
  />
  </div>

  <!-- Pain Points Section (The "Why") ************** -->

  <Features2
    title={m.pain_points_title()}
    subtitle={m.pain_points_subtitle()}
    items={[
      {
        title: m.pain_point_1_title(),
        description: m.pain_point_1_description(),
        icon: 'tabler:cloud-dollar',
        classes: {
          panel: 'flex flex-col justify-center items-center text-center',
        },
      },
      {
        title: m.pain_point_2_title(),
        description: m.pain_point_2_description(),
        icon: 'tabler:shield-lock',
        classes: {
          panel: 'flex flex-col justify-center items-center text-center',
        },
      },
      {
        title: m.pain_point_3_title(),
        description: m.pain_point_3_description(),
        icon: 'tabler:layout-dashboard',
        classes: {
          panel: 'flex flex-col justify-center items-center text-center',
        },
      },
    ]}>
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Features2>

  <!-- Solution Section (The "Databrush Method") ************** -->

  <Features
    id="solution"
    title={m.solution_title()}
    subtitle={m.solution_subtitle()}
    columns={3}
    items={[
      {
        title: m.solution_step_1_title(),
        description: m.solution_step_1_description(),
        icon: 'tabler:search',
      },
      {
        title: m.solution_step_2_title(),
        description: m.solution_step_2_description(),
        icon: 'tabler:tools',
      },
      {
        title: m.solution_step_3_title(),
        description: m.solution_step_3_description(),
        icon: 'tabler:chart-line',
      },
    ]}
  />

  <!-- Engine Comparison Section ************** -->

  <Features2
    title={m.engine_title()}
    subtitle={m.engine_subtitle()}
    items={[
      {
        title: m.engine_old_way_title(),
        description: `<ul class="list-disc pl-6 text-left"><li>${m.engine_old_way_item_1()}</li><li>${m.engine_old_way_item_2()}</li><li>${m.engine_old_way_item_3()}</li></ul>`,
        icon: 'tabler:clock-pause',
        classes: {
          panel: 'flex flex-col justify-center items-center text-center',
          icon: 'text-red-500',
        },
      },
      {
        title: m.engine_renoir_way_title(),
        description: `<ul class="list-disc pl-6 text-left"><li>${m.engine_renoir_way_item_1()}</li><li>${m.engine_renoir_way_item_2()}</li><li>${m.engine_renoir_way_item_3()}</li></ul>`,
        icon: 'tabler:bolt',
        classes: {
          panel: 'flex flex-col justify-center items-center text-center',
          icon: 'text-green-500',
        },
      },
    ]}>
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </Features2>

  <!-- Agent² Section **************** -->

  <Features2
    title={m.landing_agent_title()}
    tagline={m.landing_agent_tagline()}
    subtitle={m.landing_agent_subtitle()}
    items={[
      {
        title: m.landing_agent_item_1_title(),
        description: m.landing_agent_item_1_description(),
        icon: 'tabler:mail',
        classes: {
          panel: 'flex flex-col justify-center items-center text-center',
        },
      },
      {
        title: m.landing_agent_item_2_title(),
        description: m.landing_agent_item_2_description(),
        icon: 'tabler:chart-line',
        classes: {
          panel: 'flex flex-col justify-center items-center text-center',
        },
      },
      {
        title: m.landing_agent_item_3_title(),
        description: m.landing_agent_item_3_description(),
        icon: 'tabler:brain',
        classes: {
          panel: 'flex flex-col justify-center items-center text-center',
        },
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
    <Fragment slot="footer">
      <a
        href="/agent2"
        class="btn btn-primary inline-flex items-center gap-2 px-6 py-3 text-lg font-semibold text-white bg-primary hover:bg-primary-600 rounded-lg transition-colors"
      >
        {m.landing_agent_cta()}
        <svg
          xmlns="http://www.w3.org/2000/svg"
          class="w-5 h-5"
          viewBox="0 0 24 24"
          stroke-width="2"
          stroke="currentColor"
          fill="none"
        >
          <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7"></path>
        </svg>
      </a>
    </Fragment>
  </Features2>

  <!-- Features Widget *************** -->

  <Features
    id="features"
    title={m.features_title()}
    subtitle={m.features_subtitle()}
    columns={3}
    items={[
      {
        title: m.features_item_1_title(),
        description: m.features_item_1_description(),
        icon: 'tabler:artboard',
      },
      {
        title: m.features_item_2_title(),
        description: m.features_item_2_description(),
        icon: 'tabler:picture-in-picture',
      },
      {
        title: m.features_item_3_title(),
        description: m.features_item_3_description(),
        icon: 'tabler:adjustments-horizontal',
      },
      {
        title: m.features_item_4_title(),
        description: m.features_item_4_description(),
        icon: 'tabler:rocket',
      },
      {
        title: m.features_item_5_title(),
        description: m.features_item_5_description(),
        icon: 'tabler:arrows-right-left',
      },
      {
        title: m.features_item_6_title(),
        description: m.features_item_6_description(),
        icon: 'tabler:plug-connected',
      },
    ]}
  />

  <!-- Use Cases -->

  <Content_dinamic
    isReversed
    items={[
      {
        title: m.use_cases_item_1_title(),
        description: m.use_cases_item_1_description(),
        icon: 'tabler:shield',
        data: { 'data-index': '0' },
      },
      {
        title: m.use_cases_item_2_title(),
        description: m.use_cases_item_2_description(),
        icon: 'tabler:settings',
        data: { 'data-index': '1' },
      },
      {
        title: m.use_cases_item_3_title(),
        description: m.use_cases_item_3_description(),
        icon: 'tabler:wand',
        data: { 'data-index': '2' },
      },
    ]}
  >
    <Fragment slot="content">
      <h3
        class="text-4xl text-center font-bold tracking-tight dark:text-white sm:text-3xl mb-2"
        set:html={m.use_cases_title()}
      />
    </Fragment>
  </Content_dinamic>

  <!-- FAQs Widget ******************* -->

  <FAQs
    id="FAQ"
    title={m.faq_title()}
    items={[
      {
        title: m.faq_item_1_title(),
        description: m.faq_item_1_description(),
      },
      {
        title: m.faq_item_2_title(),
        description: m.faq_item_2_description(),
      },
      {
        title: m.faq_item_3_title(),
        description: m.faq_item_3_description(),
      },
      {
        title: m.faq_item_4_title(),
        description: m.faq_item_4_description(),
      },
      {
        title: m.faq_item_5_title(),
        description: m.faq_item_5_description(),
      },
      {
        title: m.faq_item_6_title(),
        description: m.faq_item_6_description(),
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-blue-50 dark:bg-transparent"></div>
    </Fragment>
  </FAQs>

  <ContactUs
    id="contact-form"
    title={m.contact_title()}
    subtitle={m.contact_subtitle()}
    inputs={[
      {
        type: 'text',
        name: 'name',
        label: m.contact_input_name_label(),
        placeholder: m.contact_input_name_placeholder(),
      },
      {
        type: 'email',
        name: 'email',
        label: m.contact_input_email_label(),
        placeholder: m.contact_input_email_placeholder(),
      },
    ]}
    textarea={{
      label: m.contact_textarea_label(),
      placeholder: m.contact_textarea_placeholder(),
    }}
    disclaimer={{
      label: m.contact_disclaimer_label(),
    }}
    description={m.contact_description()}
    button={m.contact_button()}
    method="post"
    action="https://forms.un-static.com/forms/f92a74143ea36998a842bb838854714e148f4379"
  />

  <!-- CallToAction Widget *********** -->

  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: m.hero_action_1(),
        href: '/contact',
        icon: 'tabler:calendar',
      },
    ]}
  >
    <Fragment slot="title" set:html={m.cta_title()} />

    <Fragment slot="subtitle" set:html={m.cta_subtitle()} />
  </CallToAction>
</Layout>
